<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         executionOrder="random"
         failOnWarning="false"
         failOnRisky="false"
         failOnEmptyTestSuite="false"
         beStrictAboutOutputDuringTests="false"
         stopOnFailure="false"
         cacheDirectory=".phpunit.cache">
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
    </testsuites>
    <!-- Couverture de code désactivée pour l'instant -->
    <!--
    <coverage>
        <include>
            <directory suffix=".php">app</directory>
        </include>
        <report>
            <html outputDirectory="coverage/html"/>
            <clover outputFile="coverage/clover.xml"/>
            <text outputFile="coverage/coverage.txt"/>
        </report>
    </coverage>
    -->
    <source restrictDeprecations="false" restrictNotices="false" restrictWarnings="false">
        <include>
            <directory>app</directory>
        </include>
    </source>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="DB_CONNECTION" value="sqlite"/>
        <env name="DB_DATABASE" value=":memory:"/>
        <ini name="error_reporting" value="E_ALL & ~E_DEPRECATED & ~E_STRICT"/>
        <ini name="display_errors" value="On"/>
    </php>
    <!-- Désactivation des logs avancés -->
    <!--
    <logging>
        <junit outputFile="junit/junit.xml"/>
    </logging>
    -->
</phpunit> 