{
  "name": "ecoride-frontend",
  "version": "1.0.0",
  "private": true,
  "description": "Frontend éco-conçu pour l'application EcoRide",
  "type": "module",
  "scripts": {
    "build": "npm run build:scss && npm run create-dist && npm run copy-files",
    "build:scss": "sass assets/scss/main.scss:assets/styles/main.min.css --style=compressed --no-source-map",
    "create-dist": "mkdir -p dist",
    "copy-files": "xcopy /E /I /Y pages\\public\\* dist\\ && xcopy /E /I /Y assets dist\\assets\\",
    "watch:scss": "sass assets/scss/main.scss:assets/styles/main.min.css --watch --style=compressed --no-source-map",
    "lint": "eslint assets/js/**/*.js",
    "format": "prettier --write 'assets/js/**/*.js' 'assets/scss/**/*.scss' '**/*.html'"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "sass": "^1.87.0"
  },
  "size-limit": [
    {
      "name": "CSS Bundle",
      "path": "assets/styles/main.min.css",
      "limit": "8 kB"
    },
    {
      "name": "JS Bundle",
      "path": "assets/js/**/*.js",
      "limit": "20 kB"
    }
  ],
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "author": "Équipe EcoRide",
  "license": "MIT"
}
