{
  "public": "frontend",
  "directoryListing": false,
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    { "source": "/", "destination": "/pages/public/index.html" },
    { "source": "/login", "destination": "/pages/public/login.html" },
    { "source": "/covoiturages", "destination": "/pages/public/covoiturages.html" },
    { "source": "/contact", "destination": "/pages/public/contact.html" },
    { "source": "/profil", "destination": "/pages/public/profil.html" },
    { "source": "/register", "destination": "/pages/public/register.html" }
  ],
  "redirects": [
    { "source": "/index.html", "destination": "/" }
  ],
  "headers": [
    {
      "source": "**/*.js",
      "headers": [
        { "key": "Content-Type", "value": "application/javascript" }
      ]
    },
    {
      "source": "**/*.css",
      "headers": [
        { "key": "Content-Type", "value": "text/css" }
      ]
    },
    {
      "source": "**/*.svg",
      "headers": [
        { "key": "Content-Type", "value": "image/svg+xml" }
      ]
    },
    {
      "source": "**/*.@(jpg|jpeg|png|gif|ico)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000" }
      ]
    }
  ]
} 