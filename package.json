{
  "name": "ecoride",
  "version": "1.0.0",
  "description": "EcoRide - Application de covoiturage écoresponsable",
  "author": "Équipe EcoRide",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "vite --config config/vite.config.js",
    "build": "vite build --config config/vite.config.js",
    "preview": "vite preview --config config/vite.config.js",
    "lint": "eslint --config config/eslint.config.js --ext .js,.vue,.ts frontend && stylelint --config config/stylelint.config.js \"frontend/**/*.{css,scss,vue}\"",
    "format": "prettier --config config/prettier.config.js --write .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --config config/eslint.config.js --fix",
      "prettier --config config/prettier.config.js --write"
    ],
    "*.{css,scss,vue}": [
      "stylelint --config config/stylelint.config.js --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vitejs/plugin-vue": "^4.0.0",
    "commitizen": "^4.3.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "eslint-plugin-vuejs-accessibility": "^2.4.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.5.1",
    "prettier": "^3.0.0",
    "sass": "^1.62.0",
    "stylelint": "^14.16.1",
    "stylelint-config-standard-scss": "^5.0.0",
    "stylelint-scss": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-compression": "^0.5.1"
  },
  "dependencies": {
    "pinia": "^2.1.0",
    "vue": "^3.3.0",
    "vue-router": "^4.2.0"
  },
  "keywords": []
} 